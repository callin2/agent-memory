{
  "name": "agent-memory-system",
  "version": "2.0.0",
  "description": "PostgreSQL-backed daemon service for AI agent persistent memory",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "dev:all": "npm run dev & cd web-ui && npm run dev",
    "start": "node dist/server.js",
    "pm2:start": "npm run build && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "network:ips": "node -e \"const os = require('os'); const ifs = os.networkInterfaces(); Object.keys(ifs).forEach(dev => { ifs[dev].forEach(details => { if (details.family === 'IPv4' && !details.internal) console.log(details.address); });});\"",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:scenarios": "vitest run tests/scenarios",
    "test:scenario": "vitest run",
    "test:performance": "vitest run tests/performance",
    "test:watch": "vitest",
    "db:migrate": "psql $PGDATABASE -f src/db/schema.sql",
    "db:migrate:new": "node run-migrations.mjs",
    "db:reset": "dropdb $PGDATABASE && createdb $PGDATABASE && npm run db:migrate",
    "db:setup:dev": "bash setup-dev-db.sh",
    "db:migrate:dev": "PGDATABASE=agent_memory_dev psql -f src/db/schema.sql && for f in src/db/migrations/*.sql; do [ \"$(basename \\\"$f\\\")\" = \"010_rollbacks.sql\" ] && continue; echo \"Applying $f...\" && PGDATABASE=agent_memory_dev psql -f \"$f\"; done",
    "db:migrate:prod": "PGDATABASE=agent_memory psql -f src/db/schema.sql && for f in src/db/migrations/*.sql; do [ \"$(basename \\\"$f\\\")\" = \"010_rollbacks.sql\" ] && continue; echo \"Applying $f...\" && PGDATABASE=agent_memory psql -f \"$f\"; done",
    "db:verify": "bash scripts/verify-databases.sh",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs:serve": "cd docs && npx serve . -p 8080",
    "docs:validate": "npx @redocly/cli lint docs/openapi.yaml",
    "frontend:install": "cd web-ui && npm install",
    "frontend:dev": "cd web-ui && npm run dev",
    "frontend:build": "cd web-ui && npm run build",
    "frontend:serve": "cd web-ui && npm run build && npm start",
    "frontend:preview": "cd web-ui && npm run preview"
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "llm",
    "context",
    "continuity",
    "identity",
    "postgresql",
    "mcp",
    "handoff",
    "consolidation"
  ],
  "author": "Thread <noreply@anthropic.com>",
  "contributors": [
    "Thread (AI Agent) <noreply@anthropic.com>",
    "Callin <https://github.com/callin2>"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/callin2/agent-memory.git"
  },
  "bugs": {
    "url": "https://github.com/callin2/agent-memory/issues"
  },
  "homepage": "https://github.com/callin2/agent-memory#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.6",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.563.0",
    "node-cron": "^4.2.1",
    "pg": "^8.18.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.56.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
