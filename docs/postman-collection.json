{
  "info": {
    "name": "Agent Memory System API",
    "description": "Postman collection for Agent Memory System v2.0 API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "tenant_id",
      "value": "default",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "pm.collectionVariables.set(\"refresh_token\", jsonData.refresh_token);",
                  "pm.collectionVariables.set(\"tenant_id\", jsonData.user.tenant_id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"tenant_id\": \"{{tenant_id}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"email\": \"newuser@example.com\",\n  \"tenant_id\": \"{{tenant_id}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "pm.collectionVariables.set(\"refresh_token\", jsonData.refresh_token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/token/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "token", "refresh"]
            }
          }
        },
        {
          "name": "Revoke Token (Logout)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/token/revoke",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "token", "revoke"]
            }
          }
        },
        {
          "name": "Generate API Key",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scopes\": [\"read:events\", \"write:events\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "api-keys"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Record Event",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agent_id\": \"agent_123\",\n  \"session_id\": \"sess_456\",\n  \"role\": \"user\",\n  \"content\": \"Hello, how are you?\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/events",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "events"]
            }
          }
        },
        {
          "name": "Get Events by Session",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/events?session_id=sess_456&limit=100",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "events"],
              "query": [
                {
                  "key": "session_id",
                  "value": "sess_456"
                },
                {
                  "key": "limit",
                  "value": "100"
                }
              ]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/events/:event_id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "events", ":event_id"],
              "variable": [
                {
                  "key": "event_id",
                  "value": "evt_abc123def4567890",
                  "type": "string"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "ACB",
      "item": [
        {
          "name": "Build ACB",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"sess_456\",\n  \"agent_id\": \"agent_123\",\n  \"channel\": \"private\",\n  \"intent\": \"user_help_request\",\n  \"query_text\": \"How can you help me?\",\n  \"max_tokens\": 65000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/acb/build",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "acb", "build"]
            }
          }
        }
      ]
    },
    {
      "name": "Decisions",
      "item": [
        {
          "name": "Create Decision",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"decision\": \"Use PostgreSQL for primary data storage\",\n  \"rationale\": [\n    \"ACID compliance\",\n    \"Complex query capabilities\",\n    \"Mature ecosystem\"\n  ],\n  \"alternatives\": [\"MongoDB\", \"DynamoDB\"],\n  \"scope\": \"project\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/decisions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "decisions"]
            }
          }
        },
        {
          "name": "Get Decisions",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/decisions?status=active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "decisions"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Capsules",
      "item": [
        {
          "name": "Create Capsule",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"author_agent_id\": \"agent_123\",\n  \"subject_type\": \"session\",\n  \"subject_id\": \"sess_456\",\n  \"scope\": \"session\",\n  \"audience_agent_ids\": [\"agent_456\", \"agent_789\"],\n  \"items\": {\n    \"chunks\": [\"chk_abc123\", \"chk_def456\"],\n    \"decisions\": [],\n    \"artifacts\": []\n  },\n  \"ttl_days\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/capsules",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "capsules"]
            }
          }
        },
        {
          "name": "Get Capsules",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/capsules?tenant_id={{tenant_id}}&agent_id=agent_123",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "capsules"],
              "query": [
                {
                  "key": "tenant_id",
                  "value": "{{tenant_id}}"
                },
                {
                  "key": "agent_id",
                  "value": "agent_123"
                }
              ]
            }
          }
        },
        {
          "name": "Revoke Capsule",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/capsules/:capsule_id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "capsules", ":capsule_id"],
              "variable": [
                {
                  "key": "capsule_id",
                  "value": "cap_abc123def4567890",
                  "type": "string"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "List Sessions",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "sessions"]
            }
          }
        },
        {
          "name": "Get Session Stats",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
