# PostgreSQL Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=agent_memory
PGUSER=postgres
PGPASSWORD=your_password_here

# Database Selection
# - Production: agent_memory
# - Development: agent_memory_dev
# - Test: agent_memory_test (auto-created by tests)
# Change PGDATABASE to switch between environments

# Connection Pool
PGPOOL_MAX=20
PGPOOL_MIN=2
PGIDLE_TIMEOUT=30000
PGCONNECTION_TIMEOUT=2000
PGMAX_LIFETIME=60000

# Query Performance
PGSTATEMENT_TIMEOUT=30000
PGQUERY_TIMEOUT=30000

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=change-this-secret-in-production-use-openssl-rand-base64-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=agent-memory-system

# API Key Configuration
API_KEY_SECRET=change-this-secret-in-production

# Session Configuration
SESSION_EXPIRES_IN=24h

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=90

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth2 Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Encryption for OAuth tokens
ENCRYPTION_KEY=your-encryption-key-min-32-chars-long-change-this
