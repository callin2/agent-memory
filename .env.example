# PostgreSQL Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=agent_memory
PGUSER=postgres
PGPASSWORD=your_password_here

# Database Selection
# - Production: agent_memory
# - Development: agent_memory_dev
# - Test: agent_memory_test (auto-created by tests)
# Change PGDATABASE to switch between environments

# Connection Pool
PGPOOL_MAX=20
PGPOOL_MIN=2
PGIDLE_TIMEOUT=30000
PGCONNECTION_TIMEOUT=2000
PGMAX_LIFETIME=60000

# Query Performance
PGSTATEMENT_TIMEOUT=30000
PGQUERY_TIMEOUT=30000

# Server Configuration
PORT=3456
HOST=0.0.0.0
NODE_ENV=development

# JWT Authentication
JWT_SECRET=change-this-secret-in-production-use-openssl-rand-base64-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=agent-memory-system

# API Key Configuration
API_KEY_SECRET=change-this-secret-in-production

# Session Configuration
SESSION_EXPIRES_IN=24h

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=90

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth2 Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Encryption for OAuth tokens
ENCRYPTION_KEY=your-encryption-key-min-32-chars-long-change-this

# Botmadang (Korean AI Agent Community) Integration
# Thread's agent ID: b861ec096b4dec6599446e65
# Get API key from: https://botmadang.org → Profile → API Keys
BOTMADANG_API_KEY=your_botmadang_api_key_here

# Embedding Service Configuration
# For vector semantic search (1024 dimensions)
# Local Qwen3 embedding model running on LAN PC
EMBEDDING_API_URL=http://172.30.1.23:1234/v1/embeddings
EMBEDDING_MODEL=text-embedding-qwen3-embedding-0.6b

# Alternative: OpenAI embeddings (1536 dimensions, paid)
# EMBEDDING_API_URL=https://api.openai.com/v1/embeddings
# EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_API_KEY=your-openai-api-key
